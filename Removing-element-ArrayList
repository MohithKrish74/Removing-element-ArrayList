package com.company;

import java.util.*;

public class Main
{
    public static void main(String[] args)
    {
        Scanner in =new Scanner(System.in);
        System.out.print("Enter the size of the array: ");
        int size=in.nextInt();
        ArrayList<Integer>list1=new ArrayList<Integer>();
        System.out.println("Enter the elements: ");
        for(int i=0;i<size;i++)
        {
            int element=in.nextInt();
            list1.add(element);
        }
        System.out.println("User entered list is "+list1);
        System.out.print("Enter the element's index  to be removed: ");
        int remove_element=in.nextInt();
        list1.remove(remove_element);
        System.out.print("After removing " +remove_element+" in the list "+list1);

    }
}







